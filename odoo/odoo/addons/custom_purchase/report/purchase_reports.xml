<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Register the PDF report action -->
    <record id="action_report_custom_purchase_order" model="ir.actions.report">
        <field name="name">Custom Purchase Order</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_purchase.external_layout_purchase_custom</field>
        <field name="report_file">custom_purchase.external_layout_purchase_custom</field>
        <field name="print_report_name">'Purchase Order - %s' % (object.name)</field>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
    </record>
</odoo>
