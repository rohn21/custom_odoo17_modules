<?xml version="1.0" encoding="UTF-8"?>
<!--purchase_order_views-->
<odoo>
    <record id="view_purchase_order_form_inherit_custom_main" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.custom.main</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <!-- Insert custom fields after vendor (partner_id) field -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="requester_name"/>
                <field name="project_code"/>
                <field name="delivery_deadline"/>
                <field name="is_urgent"/>
                <field name="internal_notes"/>
            </xpath>
        </field>
    </record>
</odoo>